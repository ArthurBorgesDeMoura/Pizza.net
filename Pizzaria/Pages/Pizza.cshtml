<!--PopUp for custom pizza-->
<div class="modal fade" id="exampleModalCustom" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Choose the topping that you want in your pizza:</h5>
            </div>
            <form method="post" id="cForm">
                <input asp-for="Pizza.PizzaName" type="hidden" id="PizzaNameCustom" />
                <input asp-for="Pizza.PizzaPrice" type="hidden" id="PizzaPriceCustom" />
                <div class="modal-body">
                    <div class="modal-b">
                        <div>
                            <img height="200px" width="200px" src="~/Images/Custom.png" />
                        </div>
                        <div class="toppings-list">
                            <div class="toppigns-items">
                                <label for="Ch">Cheese</label>
                                <input asp-for="Pizza.Cheese"  type="checkbox" id="Ch"  >
                            </div>
                            <div class="toppigns-items">
                                <label for="Mu">Mushroom</label>
                                <input  asp-for="Pizza.Mushroom" type="checkbox" id="Mu">
                            </div>
                            <div class="toppigns-items">
                                <label for="Pe">Pepperoni</label>
                                <input asp-for="Pizza.Pepperoni" type="checkbox" id="Pe">
                            </div>
                            <div class="toppigns-items">
                                <label for="Pi">Pinaple</label>
                                <input asp-for="Pizza.Pinaple" type="checkbox" id="Pi">
                            </div>
                            <div class="toppigns-items">
                                <label for="Sa">Sauce</label>
                                <input asp-for="Pizza.Sauce" type="checkbox" id="Sa">
                            </div>
                            <div class="toppigns-items">
                                <label class="lCheck" for="To">Tomato</label>
                                <input asp-for="Pizza.Tomato" id="To" >
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-style" type="submit" id="cOrder">Order</button>
                </div>
            </form>
        </div>
    </div>
</div>
