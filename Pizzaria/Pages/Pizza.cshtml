        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Pepperoni:</h5>
            </div>
            <form method="post" id="pForm">
                <input asp-for="Pizza.PizzaName" type="hidden" id="PizzaNameP" />
                <input asp-for="Pizza.PizzaPrice" type="hidden" id="PizzaPriceP" />
                <div class="modal-body">
                    <div class="modal-b">
                        <div>
                            <img height="200px" width="200px" src="~/Images/pepperoni.png">
                        </div>
                        <div>
                            <p>Delicius pepperoni pizza with thin crispy crust!</p>
                            <p>Ingredients:<br />Pepperoni, mozzarella, tomato sauce and oregano</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-style" type="submit" id="pOrder">Order</button>
                </div>
            </form>
        </div>
    </div>
</div>

